
<% layout("/layouts/boilerplate.ejs") -%>
<div class="homepage-listings">
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-2 g-4">
    <% for(let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card listing-card shadow-sm">
            <div class="image-wrapper">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
            </div>
            <div class="card-body p-2">
              <h6 class="card-title fw-bold mb-1"><%= listing.title %></h6>
              <div class="d-flex justify-content-between align-items-center">
                <span class="price fw-bold">â‚¹<%= listing.price %> </span>
                <span class="location text-muted"><i class="bi bi-geo-alt-fill"></i> <%= listing.country %></span>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
<style>
  body {
  background: #fffaf6;
  color: #222;
  line-height: 1.6;
  overflow-x: hidden;
}
</style>






